{
  "title": "Instagram Popular Posts & Comments Scraper",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "targetUsername": {
      "title": "Instagram username",
      "type": "string",
      "description": "Maglumat alynjak Instagram profili (meselem: natgeo)",
      "editor": "textfield"
    },
    "topPostsLimit": {
      "title": "Number of top posts",
      "type": "integer",
      "description": "Iň köp like alan näçe post alynsyn",
      "default": 5,
      "minimum": 1,
      "maximum": 50,
      "editor": "number"
    },
    "includeComments": {
      "title": "Include comments",
      "type": "boolean",
      "description": "Postlaryň kommentlerini hem alsynmy?",
      "default": true,
      "editor": "checkbox"
    }
  },
  "required": ["targetUsername"]
}
