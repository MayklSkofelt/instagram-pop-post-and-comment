{
    "title": "Instagram Pop Post Scraper",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "targetUsername": {
            "title": "Instagram Username",
            "type": "string",
            "description": "Maglumat çekilmeli ulanyjynyň ady (mysal: georginagio)",
            "editor": "textfield"
        },
        "topPostsLimit": {
            "title": "Top Posts Limit",
            "type": "integer",
            "description": "Iň köp like alan näçe posty seljermeli?",
            "default": 5,
            "minimum": 1
        },
        "includeComments": {
            "title": "Include Comments",
            "type": "boolean",
            "description": "Kommentleri hem çekmelimi?",
            "default": true
        }
    },
    "required": ["targetUsername"]
}